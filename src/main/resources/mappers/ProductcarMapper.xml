<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vip.imi.mapper.ProductcarMapper">

  <resultMap id="BaseResultMap" type="com.vip.imi.domain.entity.Productcar">
    <id column="productcar_id" jdbcType="INTEGER" property="productcarId" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="product_id" jdbcType="INTEGER" property="productId" />
    <result column="productcar_num" jdbcType="INTEGER" property="productcarNum" />
    <result column="productcar_create_date" jdbcType="TIMESTAMP" property="productcarCreateDate" />
    <result column="productcar_status" jdbcType="INTEGER" property="productcarStatus" />
    <result column="productcar_is_delete" jdbcType="INTEGER" property="productcarIsDelete" />
  </resultMap>

  <resultMap id="selectByUserIdMap" type="com.vip.imi.domain.vo.ProductcarVo"
             extends="BaseResultMap">
    <association property="product" javaType="com.vip.imi.domain.entity.Product"
                 resultMap="com.vip.imi.mapper.ProductMapper.BaseResultMap"/>
  </resultMap>

  <sql id="Base_Column_List">
    tpc.productcar_id, tpc.user_id, tpc.product_id, tpc.productcar_num
  </sql>

  <insert id="insert">
    insert into t_productcar (user_id, product_id, productcar_num)
    values (#{userId},#{productId},#{productcarNum})
  </insert>

  <select id="selectByUserId" resultMap="selectByUserIdMap">
    select
    <include refid="Base_Column_List" />,
    tp.product_name, tp.product_new_price, tp.product_company
    from t_productcar tpc
    left join t_product tp on tpc.product_id = tp.product_id
    where tpc.user_id=#{userId}
    and tpc.productcar_is_delete=0
  </select>

</mapper>